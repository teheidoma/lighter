modules = ["java-graalvm22.3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Application"

[[workflows.workflow]]
name = "Run Application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew bootRun"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35729
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["./gradlew", "bootRun"]
build = ["./gradlew", "build", "-x", "test"]
